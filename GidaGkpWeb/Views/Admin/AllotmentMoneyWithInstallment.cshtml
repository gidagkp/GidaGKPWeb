                                <td><input type="text" class="form-control" placeholder="@UserDataModel.PlotArea" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Plot Range" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Plot Rate" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Total" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Plot Side" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Percentage Rate" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Plot Category" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Grand Total" readonly></td>
                                <td><input type="text" class="form-control" placeholder="10 % of Total Premium as Allotment Money" readonly></td>
                                <td><input type="text" class="form-control" placeholder="90 % of Total Premium" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Deposited Earnest Money" readonly></td>
                                <td><input type="text" class="form-control" placeholder="Allotment Money- Earnest Money" readonly></td>
                                @*<td class="text-center">
            <a href="#"><i class="fa fa-pencil-square" aria-hidden="true"></i></a>
        </td>*@
